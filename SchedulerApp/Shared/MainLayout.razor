@inherits LayoutComponentBase
@using TimeWise.Shared.Layout

<MudThemeProvider IsDarkMode="@(true)" Theme="CustomDarkTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>TimeWise</PageTitle>



<MudLayout>
    <TimeWise.Shared.Layout.Navbar />
    <MudMainContent>
        @Body
    </MudMainContent>
    <Footer />
    <SubFooter />
</MudLayout>


@code {
    bool _drawerOpen = true;

    MudTheme CustomDarkTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = Colors.Blue.Darken2,
                Secondary = Colors.Blue.Darken3,
                Tertiary = Colors.Grey.Default
            },
            PaletteDark = new PaletteDark()
            {
                Primary = Colors.Blue.Darken2,
                Secondary = Colors.Blue.Darken3,
                Tertiary = Colors.Grey.Default
            },
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Inter", "Roboto", "Helvetica", "Arial", "sans-serif" }
                }
            }
        };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
