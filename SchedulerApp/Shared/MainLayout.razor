@inherits LayoutComponentBase
@using SchedulerApp.Shared.Layout

<MudThemeProvider IsDarkMode="@(true)" Theme="CustomDarkTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<PageTitle>SchedulerApp</PageTitle>



<MudLayout>
    <SchedulerApp.Shared.Layout.Navbar />
    <MudMainContent>
        @Body
    </MudMainContent>
    <Footer />
    <SubFooter />
</MudLayout>


@code {
    bool _drawerOpen = true;

    MudTheme CustomDarkTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = Colors.Blue.Darken2,
                Secondary = Colors.Green.Accent4
            },
            PaletteDark = new PaletteDark()
            {
                Primary = Colors.Blue.Darken2
            }
        };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
